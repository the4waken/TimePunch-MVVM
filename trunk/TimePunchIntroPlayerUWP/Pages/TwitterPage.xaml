<Page
    x:Class="TimePunchIntroPlayerUWP.Pages.TwitterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TimePunchIntroPlayerUWP.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource ViewModelLocater}, Path=TwitterViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <WebView Grid.Row="0" Source="https://twitter.com/timepunchnews?lang=de" />

        <Grid Grid.Row="1">
            <Button
                x:Uid="GoBack"
                Width="150"
                Height="50"
                Margin="5"
                Command="{Binding GoBackToMainCommand}" />
        </Grid>
    </Grid>

</Page>
